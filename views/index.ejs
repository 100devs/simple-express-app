  <div class=listView>
    <h2> Current List </h2>
    <ul class="quotes">
      <!-- Loop through quotes -->
      <% for(var i = 0; i < quotes.length; i++) {%>
        <li class="quote listItem">
          <!-- Output name from the iterated quote object -->
          <span class="" id="listName<%=[i]%>"><%= quotes[i].name %></span>
          <!-- Output quote from the iterated quote object -->
          <span class="" id="listNumber<%=[i]%>"><%= quotes[i].quote %></span>
          <span hidden class="stData" id="boolean-value-<%=[i]%>"><%= quotes[i].st %></span>
          <button class='unicode' id="stikethrough-button-<%=[i]%>">&#9989;</button>
          <button class='unicode' id="delete-listing-button-<%=[i]%>">&#128465;</button>
          
        </li>
      <% } %>
    </ul>
  </div>

  <script src="/main.js"></script>

</body>
</html>