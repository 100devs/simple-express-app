<body>
    <h1>Barbie Movie Fight to the Death</h1>
    <h4>Vote for your favourite Barbie movie character and add your faves and the movie they appear in!</h2>
    <ul class="movies">
    <% for(let i=0; i < info.length; i++) {%>
        <li class="movie">
            <span><%= info[i].movieName %></span>
            <span><%= info[i].bestCharacter %></span>
            <span><%= info[i].likes %></span>
            <span class='fa fa-thumbs-up'></span>
            <span class='fa fa-trash'></span>
        </li>
    <% } %>
    </ul>

    <h2>Add A Character:</h2>

    <form action="/addCharacter" method="POST">
        <input type="text" placeholder="Movie Name" name="movieName">
        <input type="text" placeholder="Best Character" name="bestCharacter">
        <input type="submit">
    </form>
    

    <script src='js/main.js'></script>
</body>
</html>
