  <div class=flex>
    <div class="listInput flexChild">
      <h1>Add an Item</h1>

      <form class="form" action="/quotes" method="POST">
          <input autocapitalize type="text" minlength=1 placeholder="Item" name="name" id="input-name">
          <input type="text" placeholder="Quantity" name="quote" id="input-quote">
          <!-- type="number" min="0" -->
          <button id='submit-button' type="submit">&#10132;</button>
         
          <div id="message"></div>
      </form>

      <!-- <button id="update-button">Replace!</button> -->
      <!-- <button id="delete-button">Delete</button> -->
      <!-- <button id="delete-all-button">Delete All</button> -->
    </div>



    <!-- <div class="replace flexChild">
        <h2>Replace Something</h2>
