{
    "name": "vite-typescript-ssr-react",
    "version": "1.0.0",
    "homepage": "https://angra974.github.io/personal-portfolio/",
    "description": "Boilerplate for a modern web stack with Reach 18",
    "repository": {
        "type": "git",
        "url": "https://github.com/Angra974/simple-express-app-submission"
    },
    "author": "Thierry Parlier",
    "license": "MIT",
    "scripts": {
        "dev:server": "cross-env NODE_TYPE=server vite-node server.ts -w",
        "dev:client": "cross-env NODE_TYPE=client vite dev",
        "build": "tsc -p tsconfig.prod.json && npm run build:client && npm run build:server",
        "build:client": "vite build --outDir dist/client",
        "build:server": "vite build --ssr src/client/entry-server.tsx --outDir dist/server",
        "test": "jest",
        "start": "node dist/server.js",
        "test:watch": "jest --watch",
        "coverage": "jest --coverage",
        "serve": "npm run build && npm run copy-files && cross-env NODE_ENV=production vite-node dist/server.js",
        "serve:local": "vite serve",
        "clean": "rimraf dist/",
        "predeploy": "npm run build",
        "deploy": "gh-pages -d dist",
        "fix-code": "prettier-eslint --write 'src/**/*.{js,jsx}' ",
        "fix-styles": "prettier-stylelint --write 'src/**/*.{css,scss}' ",
        "copy-files": "copyfiles public/* dist/ && copyfiles -dist/client/* dist/",
        "format": "tsc && npm run fix-code && npm run fix-styles",
        "prepare": "husky install",
		"heroku-postbuild": "npm config set ignore-scripts true && npm install && npm run serve"
    },
